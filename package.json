{
  "name": "tuff-project",
  "version": "1.0.0",
  "description": "A basic TypeScript project",
  "type": "module",
  "main": "dist/index.ts",
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run tsc --watch",
    "start": "bun src/index.ts",
    "watch": "nodemon",
    "lint": "eslint src/ tests/",
    "prepare": "husky install"
  },
  "nodemonConfig": {
    "watch": [
      "main.tuff",
      "src/index.ts"
    ],
    "ext": "tuff,ts",
    "exec": "bun start",
    "quiet": false
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.55.0"
  }
}
