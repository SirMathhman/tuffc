{
  "name": "tuffc",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Self-hosted Tuff compiler (native-first workflow; Stage0 fallback only)",
  "bin": {
    "tuff": "./scripts/tuffc-native.mjs",
    "tuffc": "./scripts/tuffc-native.mjs"
  },
  "scripts": {
    "build": "tsx ./scripts/with-timeout.ts 180000 tsx ./scripts/build-selfhost-js.ts",
    "test": "npm run test:core",
    "test:core": "tsx ./scripts/with-timeout.ts 60000 tsx ./src/test/js/test-orchestrator.ts --suite=core",
    "test:native": "tsx ./scripts/with-timeout.ts 60000 tsx ./src/test/js/test-orchestrator.ts --suite=native",
    "test:stress": "tsx ./scripts/with-timeout.ts 60000 tsx ./src/test/js/test-orchestrator.ts --suite=stress",
    "test:parity": "tsx ./scripts/with-timeout.ts 60000 tsx ./src/test/js/test-orchestrator.ts --suite=parity",
    "test:all": "tsx ./scripts/with-timeout.ts 60000 tsx ./src/test/js/test-orchestrator.ts --suite=core,native,stress",
    "test:update": "tsx ./src/test/js/test-orchestrator.ts --suite=core --update",
    "check": "npm run lint && npm run typecheck && npm run test",
    "lint": "tsx ./scripts/with-timeout.ts 60000 node ./scripts/tuffc-native.mjs ./src/main/tuff/selfhost.tuff --lint --lint-strict -o ./tests/out/lint/selfhost.js",
    "typecheck": "tsc -p tsconfig.json",
    "format": "tsx ./scripts/with-timeout.ts 60000 tsx ./src/main/js/cli.ts format ./src/main/tuff --write",
    "cpd:tuff": "tsx ./scripts/cpd-tuff.ts",
    "native:selfhost:parity": "tsx ./scripts/with-timeout.ts 60000 tsx ./src/test/js/c-bootstrap-parity.ts",
    "native:selfhost:run": "tsx ./scripts/run-native-selfhost.ts",
    "build:binary": "npm run native:selfhost:parity && tsx ./scripts/build-native-binary.ts",
    "build:web": "esbuild ./src/main/js/web-compiler.ts --bundle --platform=browser --format=iife --global-name=TuffCompiler --target=es2020 --minify --sourcemap --outfile=./tests/out/web/tuff-compiler.min.js",
    "build:web:esm": "esbuild ./src/main/js/web-compiler.ts --bundle --platform=browser --format=esm --target=es2020 --minify --sourcemap --outfile=./tests/out/web/tuff-compiler.esm.js",
    "profile:compiler": "tsx ./scripts/profile-compiler.ts"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "esbuild": "^0.25.12",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
