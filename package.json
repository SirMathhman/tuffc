{
  "name": "tuff-stage0",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Stage 0 JavaScript bootstrap compiler for Tuff-lite",
  "bin": {
    "tuff": "./src/main/js/cli.js"
  },
  "scripts": {
    "build": "node ./src/test/js/selfhost-test.js",
    "test": "node ./src/test/js/run-tests.js && node ./src/test/js/stage1-bootstrap.js && node ./src/test/js/phase3-stage2.js && node ./src/test/js/phase4-production.js && node ./src/test/js/selfhost-test.js",
    "lint": "node ./src/main/js/cli.js compile ./src/test/tuff/cases/factorial.tuff --lint -o ./tests/out/lint/factorial.js",
    "test:update": "node ./src/test/js/run-tests.js --update",
    "compile:sample": "node ./src/main/js/cli.js compile ./src/test/tuff/cases/factorial.tuff -o ./tests/out/factorial.js",
    "stage1:bootstrap": "node ./src/test/js/stage1-bootstrap.js",
    "stage2:verify": "node ./src/test/js/phase3-stage2.js",
    "stage4:verify": "node ./src/test/js/phase4-production.js"
  }
}
