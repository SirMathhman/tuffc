// Runtime prelude authored in Tuff.
// This module is the source of truth for runtime helpers we want emitted to C.
// Note: integration hook is staged in host/selfhost plumbing.

extern let { abort } = stdlib;

extern fn abort() : I32;

out fn tuff_runtime_panic(msg: *Str) : I32 => {
    abort();
    0
};

out fn tuff_runtime_panic_with_code(code: *Str, msg: *Str, reason: *Str, fix: *Str) : I32 => {
    abort();
    0
};
